


.col-md-8.col-md-offset-2
  .col-md-6.col-md-offset-3
    %table.table
      %thead
        %tr
          %td 
            %h2 
              Hello,
              - if user.name.present?
                = user.name
              - else
                = user.first_name
          %td
      %tbody
        %tr
          %td Your email is: 
          %td
            %a #{user.email if user.email}
        %tr
          %td If you want to edit your account click here:
          %td= link_to 'Edit', edit_user_registration_path, class: 'btn btn-default'

=render 'adminpanel'